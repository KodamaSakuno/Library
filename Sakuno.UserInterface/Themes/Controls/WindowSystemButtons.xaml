<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ruic="clr-namespace:Sakuno.UserInterface.Controls">

    <Style TargetType="{x:Type ruic:WindowSystemButtons}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ruic:WindowSystemButtons}">
                    <StackPanel Orientation="Horizontal">
                        <ruic:WindowCaptionButton WindowAction="Minimize" />
                        <ruic:WindowCaptionButton WindowAction="Normalize" />
                        <ruic:WindowCaptionButton WindowAction="Maximize" />
                        <ruic:WindowCaptionButton WindowAction="Close" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
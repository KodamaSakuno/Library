<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ruic="clr-namespace:Sakuno.UserInterface.Controls">

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <Style TargetType="{x:Type ruic:DockableZone}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ruic:DockableZone}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <ContentPresenter />

                            <Grid Margin="4" Visibility="{TemplateBinding IsParticipatingInDocking, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ruic:DockAdorner Direction="Left" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                <ruic:DockAdorner Direction="Top" VerticalAlignment="Top" HorizontalAlignment="Center" />
                                <ruic:DockAdorner Direction="Right" VerticalAlignment="Center" HorizontalAlignment="Right" />
                                <ruic:DockAdorner Direction="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
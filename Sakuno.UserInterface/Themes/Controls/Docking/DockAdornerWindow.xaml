<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ruicd="clr-namespace:Sakuno.UserInterface.Controls.Docking">

    <Style TargetType="{x:Type ruicd:DockAdornerWindow}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ruicd:DockAdornerWindow}">
                    <Grid>
                        <ruicd:DockAdorner x:Name="PART_LeftDockAdorner" Direction="Left" VerticalAlignment="Center" HorizontalAlignment="Left" />
                        <ruicd:DockAdorner x:Name="PART_TopDockAdorner" Direction="Top" VerticalAlignment="Top" HorizontalAlignment="Center" />
                        <ruicd:DockAdorner x:Name="PART_RightDockAdorner" Direction="Right" VerticalAlignment="Center" HorizontalAlignment="Right" />
                        <ruicd:DockAdorner x:Name="PART_BottomDockAdorner" Direction="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>